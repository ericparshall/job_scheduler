<h2>Listing Employees</h2>

<table class="table table-bordered table-striped">
  <tr>
    <th>Name</th>
    <th>Email</th>
    <th>Admin</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%= user.full_name %></td>
    <td><%= user.email %></td>
    <td><%= user.admin? ? "Yes" : "No" %></td>
    <td><%= link_to 'Show', employee_path(user) %></td>
    <td><%= link_to 'Edit', edit_employee_path(user) %></td>
    <td><%= link_to 'Destroy', employee_path(user), method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

