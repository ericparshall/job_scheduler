<h2>Listing Employees</h2>

<table class="table table-bordered table-striped">
  <tr>
    <th>Name</th>
    <th>Email</th>
    <th>Type</th>
    <th>Manager</th>
    <th></th>
    <th></th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%= link_to user.full_name, employee_path(user) %></td>
    <td><%= link_to user.email, employee_path(user) %></td>
    <td><%= user.user_type.name %></td>
    <td><%= user.manager.try(:full_name) %></td>
    <td><%= link_to 'Edit', edit_employee_path(user) %></td>
    <td><%= link_to 'Delete', employee_path(user), method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

