<h3 style="float: left">Jobs</h3>
<%= link_to 'New Job', new_job_path, class: "btn btn-lg btn-primary btn-block", style: "width: 200px; color: white; float: right" %>
<div style="clear:both" />
<ul class="nav nav-tabs">
  <li class="<%= tab_active["Default"] %>"><%= link_to "Default", jobs_path %></li>
  <li class="<%= tab_active["Archived"] %>"><%= link_to "Archived", jobs_path(archived: true) %></li>
</ul>
<table class="table table-bordered table-striped">
  <tr>
    <th>Customer</th>
    <th>Job Name</th>
    <th>Description</th>
    <th></th>
  </tr>

<% @jobs.each do |job| %>
  <tr>
    <td><%= link_to job.customer.try(:name), job.customer unless job.customer.nil? %></td>
    <td><%= link_to job.name, job %></td>
    <td><%= link_to job.description, job %></td>
    <td>
      <%= link_to 'Edit', edit_job_path(job) %>
      |
      <%= link_to job.archived? ? "Unarchive" : "Archive", archive_job_path(job, params), method: :post %>
    </td>
  </tr>
<% end %>
</table>

<br />
