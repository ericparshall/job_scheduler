<h3>Sign in</h3>

<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "form-signin" }) do |f| %>
  <%= f.email_field :email, autofocus: true, class: "input-block-level", placeholder: "Email address", class: "form-control" %>
  <br />
  <%= f.password_field :password, placeholder: "Password", class: "form-control" %>
  <label class="checkbox">
    <%= f.check_box :remember_me %> Remember me
  </label>
  <%= f.submit "Sign in", class: "btn btn-lg btn-primary btn-block" %>
<% end %>

<%= render "devise/shared/links" %>
