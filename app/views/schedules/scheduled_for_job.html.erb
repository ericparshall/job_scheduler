<style type="text/css">
  .panel-body p label {
    padding-right: 5px;
  }
</style>
<div class="panel panel-default">
  <div class="panel-heading"><h3><%= @job.name %></h3></div>
  <div class="panel-body">
    <% unless @job.description.blank? %>
    <p>
      <label>Description: </label><pre><%= @job.description %></pre>
    </p>
    <% end %>
    
    <% unless @job.customer.nil? %>
      <p>
        <label>Customer: </label><%= @job.customer.name %>
      </p>
    <% end %>
    
    <% unless @job.point_of_contact.nil?%>
      <p>
        <label>Point-of-contact: </label><%= @job.point_of_contact.name %>
      </p>
      <p>
        <label>Phone: </label><a href="tel:<%= @job.point_of_contact.phone_number %>"><%= @job.point_of_contact.phone_number %></a>
      </p>
      <p>
        <label>Email: </label><a href="mailto:<%= @job.point_of_contact.email_address %>" target="_blank"><%= @job.point_of_contact.email_address %></a>
      </p>
      <% unless @job.point_of_contact.address.blank? %>
      <p>
        <label>Address: </label><pre><a href="<%= "https://maps.google.com/?#{{q: @job.point_of_contact.address}.to_query}" %>" target="_blank" class="list-group-item active"><%= @job.point_of_contact.address %></a></pre>
      </p>
      <% end %>
    <% end %>
  </div>
  <table class="table table-bordered table-striped">
    <tr>
      <th>User</th>
      <th>Schedule Date</th>
      <th>Hours</th>
      <th>Total Hours</th>
    </tr>
  <% @schedules.each do |schedule| %>
    <tr>
      <td><%= schedule.user.full_name %></td>
      <td><%= schedule.schedule_date %></td>
      <td><%= "#{schedule.from_time.strftime("%I:%M%P")} - #{schedule.to_time.strftime("%I:%M%P")}" unless schedule.from_time.nil? || schedule.to_time.nil? %></td>
      <td><%= schedule.hours %></td>
    </tr>
  <% end %>
  </table>
</div>