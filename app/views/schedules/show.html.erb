<script type="text/javascript">
  $(document).ready(function() {
    $('#calendar').fullCalendar({
      firstDay: 1,
      defaultView: 'agendaDay',
      year: <%= @schedule.from_time.year %>,
      month: <%= @schedule.from_time.month - 1 %>,
      date: <%= @schedule.from_time.day %>,
      events: [<%= @schedule.to_schedule_event(edit_schedule_path(@schedule, return_path: schedule_path(@schedule))).to_json.html_safe %>]
    })
  });
</script>
<p>
  <b>Customer:</b>
  <%= @schedule.job.customer.try(:name) %>
</p>
<p>
  <b>Job:</b>
  <%= @schedule.job.name %>
</p>

<p>
  <b>User:</b>
  <%= @schedule.user.full_name %>
</p>

<p>
  <b>Hours:</b>
  <%= @schedule.hours %>
</p>

<p>
  <b>Schedule:</b>
  <%= "#{@schedule.from_time.strftime("%m/%d/%Y %I:%M%P")}  to  #{@schedule.to_time.strftime("%m/%d/%Y %I:%M%P")}" %>
</p>

<div id="calendar" style="padding-top: 10px; padding-left: 10%; padding-right: 10%; padding-bottom: 10%"></div>

<%= link_to 'Edit', edit_schedule_path(@schedule) %> |
<%= link_to 'Back', schedules_path %>
